<Page x:Class="KornilovaVarvara420Shop.Pages.AddProductPaage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KornilovaVarvara420Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AddProductPaage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
    Text="Добавление"
    Grid.Column="1"
    Grid.ColumnSpan="3"
    Grid.Row="0"
    Grid.RowSpan="1"
    FontSize="76"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBlock
    Text="Наименование:"
    Grid.Column="0"
    Grid.ColumnSpan="1"
    Grid.Row="2"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBox x:Name="NameTbx"
    Grid.Column="1"
    Grid.ColumnSpan="2"
    Grid.Row="2"
    Width="600"
    Height="70"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBox x:Name="DescriptionTbx"
    Grid.Column="1"
    Grid.ColumnSpan="2"
    Grid.Row="3"
    Width="600"
    Height="300"
    Grid.RowSpan="2"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBlock
    Text="Описание:"
    Grid.Column="0"
    Grid.ColumnSpan="1"
    Grid.Row="3"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBlock
    Text="Цена:"
    Grid.Column="0"
    Grid.ColumnSpan="1"
    Grid.Row="5"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <TextBox x:Name="CostTbx"
    Grid.Column="1"
    Grid.ColumnSpan="2"
    Grid.Row="5"
    Width="600"
    Height="70"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black" />

        <Image x:Name="Photo" Source="{Binding Photo}"
    Grid.Column="3"
    Grid.ColumnSpan="2"
    Grid.Row="1"
    Width="550"
    Height="450"
    Grid.RowSpan="3" />

        <Button x:Name="BackBtn"
    Content="Назад"
    Grid.Column="4"
    Grid.ColumnSpan="2"
    Grid.Row="5"
    Width="350"
    Height="55"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="BackBtn_Click" />

        <Button x:Name="AddPhotoBtn"
    Content="Добавить фото"
    Grid.Column="3"
    Grid.ColumnSpan="2"
    Grid.Row="4"
    Width="400"
    Height="70"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="AddPhotoBtn_Click" />

        <Button x:Name="AddBtn"
    Content="Добавить"
    Grid.Column="3"
    Grid.ColumnSpan="2"
    Grid.Row="5"
    Width="350"
    Height="55"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="AddBtn_Click" />

    </Grid>
</Page>
