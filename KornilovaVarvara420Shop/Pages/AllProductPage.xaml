<Page x:Class="KornilovaVarvara420Shop.Pages.AllProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KornilovaVarvara420Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AllProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListView x:Name="ProductsLV"
    Margin="0 0 0 0"
    Grid.Row="1"
    Grid.Column="1"
    Grid.ColumnSpan="3"
    Grid.RowSpan="4"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
    Background="Transparent"
    BorderBrush="Transparent"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
    ItemsSource="{Binding Product}" d:ItemsSource="{d:SampleData ItemCount=6}" 
    SelectionChanged="ProductsLv_SelectionChanged"
    SelectionMode="Extended">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border VerticalAlignment="Top"
                    BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="0 5 0 0">
                        <Grid Height="220" Width="530">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Margin="10 5 0 0" Source="{Binding MainImage}" Width="100" Height="100" Grid.Column="0"/>
                            <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="10,5,0,0"
                                Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"
                                       FontSize="21"
                                       Foreground="Black"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"
                                   FontSize="21"
                                   Foreground="Black"/>
                                <TextBlock Text="{Binding Cost}"
                                   FontSize="21"
                                   Foreground="Black"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel x:Name="NavSp"
    Grid.Row="2"
    Grid.Column="4"
    Orientation="Horizontal"
    HorizontalAlignment="Center"
    VerticalAlignment="Bottom"
    Margin="0 0 0 0"
    Height="50"/>

        <TextBlock x:Name="CountTB"
    Grid.Row="5"
    Grid.Column="3"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    Margin="0 0 0 0"
    Height="50" FontSize="25"/>

        <TextBox x:Name="SearchTB"
    Margin="0 0 20 0"
    Grid.Column="4"
    Grid.ColumnSpan="1"
    Grid.Row="1"
    Width="350"
    Height="70"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    TextChanged="SearchTB_TextChanged"/>

        <Button x:Name="SvernutBtn"
    Content="Свернуть" Margin="30 0 0 0"
    Grid.Column="4"
    Grid.ColumnSpan="1"
    Grid.Row="0"
    Width="160"
    Height="55"
    Grid.RowSpan="1"
    FontSize="26"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="SvernutBtn_Click"/>

        <Button x:Name="CloseBtn" Margin="0 0 30 0"
    Content="Закрыть"
    Grid.Column="4"
    Grid.ColumnSpan="1"
    Grid.Row="0"
    Width="160"
    Height="55"
    Grid.RowSpan="1"
    FontSize="26"
    HorizontalAlignment="Right"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="CloseBtn_Click"/>

        <Button x:Name="KormBtn"
    Content="Корма"
    Grid.Column="0"
    Grid.ColumnSpan="1"
    Grid.Row="1"
    Width="160"
    Height="55"
    FontSize="26"
    HorizontalAlignment="Center"
    VerticalAlignment="top"
    Foreground="Black"
    Click="KormBtn_Click"/>

        <Button x:Name="ExitBtn"
    Content="Выход"
    Grid.Column="0"
    Grid.ColumnSpan="1"
    Grid.Row="1"
    Width="160"
    Height="55"
    FontSize="26"
    HorizontalAlignment="Center"
    VerticalAlignment="Bottom"
    Foreground="Black"
    Click="ExitBtn_Click"/>

        <Button x:Name="AddBtn"
    Content="Добавить продукт"
    Grid.Column="1"
    Grid.ColumnSpan="3"
    Grid.Row="5"
    Width="450"
    Height="70"
    Grid.RowSpan="1"
    FontSize="36"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Foreground="Black"
    Click="AddBtn_Click"/>

    </Grid>
</Page>
