<Page x:Class="KornilovaVarvara420Shop.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KornilovaVarvara420Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Регистрация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Регистрация"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Grid.RowSpan="1"
            FontSize="76"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBlock
            Text="Фамилия:"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.Row="1"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBox x:Name="SurnameTbx"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Width="600"
            Height="70"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBlock
            Text="Имя:"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.Row="2"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBox x:Name="NameTbx"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Width="600"
            Height="70"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBlock
           Text="Отчество:"
           Grid.Column="0"
           Grid.ColumnSpan="1"
           Grid.Row="3"
           Grid.RowSpan="1"
           FontSize="36"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Foreground="Black" />

        <TextBox x:Name="PatrTbx"
           Grid.Column="1"
           Grid.ColumnSpan="2"
           Grid.Row="3"
           Width="600"
           Height="70"
           Grid.RowSpan="1"
           FontSize="36"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Foreground="Black" />

        <TextBlock
            Text="Логин:"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Grid.Row="4"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBox x:Name="LoginTbx"
            Grid.Column="1"
            Grid.Row="4"
            Width="300"
            Height="70"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBlock
            Text="Пароль:"
            Grid.Column="2"
            Grid.Row="4"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <TextBox x:Name="PasswordTbx"
            Grid.Column="3"
            Grid.Row="4"
            Width="300"
            Height="70"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black" />

        <Button x:Name="RegBtn"
            Content="Зарегистрироваться"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="5"
            Width="450"
            Height="70"
            Grid.RowSpan="1"
            FontSize="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Black"
            Click="RegBtn_Click" />
    </Grid>
</Page>
